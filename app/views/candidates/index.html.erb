<%= flash[:notice] %>

<h1>你好，歡迎投自己喜歡的電影一票!</h1>

<%= link_to 'Add Candidate', new_candidate_path %>

<table>
  <tr>
    <td></td>
    <td>Votes</td>
    <td>Name</td>
    <td>Party</td>
    <td>Age</td>
    <td>Action</td>
  </tr>

  <% @candidates.each do |candidate| %>
    <tr>
      <td><%= link_to 'vote', vote_candidate_path(candidate.id), method: 'post' %></td>
      <td><%= candidate.votes %></td>
      <td><%= link_to candidate.name, candidate_path(candidate.id) %></td>
      <td><%= candidate.party %></td>
      <td><%= candidate.age %></td>
      <td>
        <%= link_to 'update', edit_candidate_path(candidate.id) %>
        <%= link_to 'delete', candidate_path(candidate.id), method: 'delete', data: {confirm: '你確定要刪除?!'} %>  
      </td>
    </tr>
  <% end %>
</table>